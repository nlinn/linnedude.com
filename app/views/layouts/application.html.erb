<!DOCTYPE html>
<html>
  <head>
    <title>linnedude.com</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= yield %>
    <% if current_user %>
      <div class="my-4">
        Logged in: <%= current_user.email %>, <%= button_to "Sign out", sign_out_path, method: :delete %>
        <br>
        <a href="/posts">All Posts</a> | <a href="/posts/new">New Post</a>
      </div>
      <%= I18n.locale %>
    <% end %>

  </body>
</html>
