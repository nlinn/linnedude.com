<div class="h-entry flex justify-center mb-5">

  <div class="max-w-xl w-full bg-white shadow-lg ">
    <div class="px-6 py-4">

      <% if post.photos.size > 1 %>
        <%= render 'partials/photo_swiper', photos: post.photos %>
      <% elsif post.photos.size == 1 %>
        <a href="/read/<%= post.slug %>"><%= image_tag post.photos.first.file_url(:m_square), class: "w-full" %></a>
      <% end %>

      <div class="font-bold text-lg mb-2 mt-4"><a href="/read/<%= post.slug %>"><span class="text-gray-900"><%= post.title %></span></a></div>

      <%= truncate(post.content.to_plain_text, length: 200) %>

      <a class="u-url font-bold text-cyan-500" href="/read/<%= post.slug %>">Weiterlesen &rarr;</a>
      <div class="mt-3">
      <% post.labels.each do |label| %>
        <%= render 'read/label', label: label %>
      <% end %>
      </div>
      <% if post.published_at.present? %>
        <p class="uppercase text-gray-500 text-xs mt-2"><%= post.published_at.present? ? l(post.published_at, format: :default) : '' %></p>
      <% end %>
    </div>
  </div>
</div>