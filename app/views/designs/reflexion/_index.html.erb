<div class="flex justify-center mb-4">

  <div class="max-w-xl overflow-hidden" style="font-family: SourceSerifPro;">

    <div class="px-6 py-4">
      <div class="text-base" style="font-family: SourceSerifPro;">Reflexion</div>
      <hr style="border: 1px solid #CE0DEA;">
      <div class="italic text-base text-center mb-8 mt-8">Index</div>
      <% @posts.each do |post| %>
        <a href="/reflexion/<%= post.slug %>" style="color: inherit; text-decoration: inherit;">
        <div class="font-bold text-xl mb-1 mt-8">
        <time class="dt-published uppercase italic text-base mr-4" datetime="<%= post.published_at.strftime("%Y-%m-%dT%H:%M:%S") %>"><%= l(post.published_at, format: :default) %></time>
        <%= post.title %></div></a>
      <% end %>
    </div>
  </div>
</div>
